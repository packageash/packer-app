#!/bin/sh

clear


case $1 in

  install-donut)
  sudo mkdir /home/packercache
    sudo wget https://cdn.glitch.me/ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FDonut.deb
    sudo mv ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FDonut.deb Donut.deb
    sudo mv Donut.deb /home/packercache
    sudo echo "a3db2f16c16abd593195bb2f0004f151 Donut.deb" | md5sum -c Donut.deb
    sudo dpkg --install Donut.deb 
    sudo echo Cleaning Up
    sudo rm -r /home/packercache
    sudo clear
    sudo echo Installed Donut Thingy
    sudo echo Donut Thingy 1.0
    ;;

  uninstall-donut)
    sudo rm /usr/local/bin/donut
    sudo clear
    sudo echo Uninstalled Donut Thingy
    ;;
    
  install-neofetch)
    sudo mkdir /home/packercache
    sudo wget https://cdn.glitch.me/ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FNeofetch.deb
    sudo mv ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FNeofetch.deb Neofetch.deb
    sudo mv Neofetch.deb /home/packercache
    sudo dpkg --install /home/packercache/Neofetch.deb 
    sudo echo Cleaning Up
    sudo rm -r /home/packercache
    sudo mv /usr/bin/neofetch /usr/local/bin/neofetch
    sudo chmod 755 /usr/local/bin/neofetch
    sudo clear
    sudo echo Installed NeoFetch
    sudo echo NeoFetch Version 1.0
    ;;

  uninstall-neofetch)
    sudo rm /usr/local/bin/neofetch
    sudo clear
    sudo echo Uninstalled Neofetch
    ;;
    
  --version)
  echo Packer Version 1.4 Debug
    ;;
    
    packages)
    echo 2 Packages Found In Repo:
    echo Donut Thingy
    echo Installable By packer install-donut
    echo Can Be Magneted: Yes
    echo Neofetch
    echo Installable By packer install-neofetch
    echo Can Be Magneted: Yes
    echo End Of Package List
    ;;
    
    magnet-neofetch-code)
    sudo mkdir ~/MagnetedCodePacker
    sudo echo Magenting!
    sudo cp /usr/local/bin/neofetch ~/MagnetedCodePacker/Neofetch
    ;;
    
    magnet-donut-code)
    sudo mkdir ~/MagnetedCodePacker
    sudo echo Magenting!
    sudo wget https://raw.githubusercontent.com/packageash/app-code/main/donut.c
    sudo mv donut.c ~/MagnetedCodePacker
    ;;
    
  *)
    echo "Nothing Picked To (Un)Install"
    echo For A Package Request Ask PokeyManatee4 To Add A New Package To The Repo And What The Package Or Why I Should Add It To The Repo
    ;;
esac
