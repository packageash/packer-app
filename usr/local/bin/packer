#!/bin/sh

clear


case $1 in

  install-donut)
  sudo mkdir /home/packercache
    sudo wget https://cdn.glitch.me/ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FDonut.deb -o /home/packercache/Donut.deb
    sudo echo "a3db2f16c16abd593195bb2f0004f151 Donut.deb" | md5sum -c Donut.deb
    sudo dpkg --install /home/packercache/Donut.deb 
    sudo rm /home/packercache/Donut.deb
    ;;

  uninstall-donut)
    sudo rm /usr/local/bin/donut
    ;;
    
  install-neofetch)
    sudo mkdir /home/packercache
    sudo wget https://cdn.glitch.me/ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FNeofetch.deb -o /home/packercache/Neofetch.deb
    sudo mv ec7fa70f-caec-4ba9-877f-3f809b43f7ea%2FNeofetch.deb /home/packercache/Neofetch.deb 
    sudo dpkg --install /home/packcache/Neofetch.deb 
    sudo rm /home/packercache/Neofetch.deb
    sudo mv /usr/bin/neofetch /usr/local/bin/neofeth
    sudo chmod 755 /usr/local/bin/neofetch
    ;;

  uninstall-neofetch)
    sudo rm /usr/local/bin/neofetch
    ;;
    
  --version)
  echo Packer Version 1.1 Debug
    ;;
    
  *)
    echo "Nothing Picked To Install"
    ;;
esac
